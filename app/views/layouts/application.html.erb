<!DOCTYPE html>
<html>
  <head>
    <title>BuyNothing</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   
  </head>
<nav class = "nav-bar">
      <%= button_to "Home", home_path, method: :get %>
      <%= button_to "All Listings", listings_path, method: :get %>
      <% if !session[:user_id] %>
                <%= button_to "Create Account", new_user_path, method: :get %>
                <%= button_to "Login", new_session_path, method: :get %>
              <% else %>
                <%= button_to "My Profile", user_path(User.find_by(id: session[:user_id])), method: :get %>
                <%= button_to "My Listings", user_listings_path(User.find_by(id: session[:user_id])), method: :get %>
                <%= button_to "Create New Listing", new_listing_path, method: :get %>
                <%= button_to "Logout", {:controller=> "sessions", :action=> "destroy"}, :method => :delete %>
            <% end %><br>
   </nav>
 <% if session[:user_id] %>
      <h4>Welcome to Buy Nothing Chicago,   <%= User.find_by(id: session[:user_id]).name %></h4>
    <% end %>


  <body>

  
  
    <% if flash.alert  %>
    <% flash.alert.each do |message| %>
    <li> <%= message %></li>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
